<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialogbox_design"
    android:importantForAutofill="auto"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/baseline_check_circle_outline_24"
        android:layout_marginTop="10dp"
        android:background="@color/white"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="A password Reset Link has been sent to your Email ID"
            android:gravity="clip_horizontal"
            android:paddingLeft="25dp"
            android:textColor="#090909"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:alpha="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Follow the instruction and the link recieved in your email to reset your password"
            android:gravity="clip_horizontal"
            android:textColor="#000000"
            android:autoSizeTextType="uniform"

            android:paddingLeft="25dp"
            android:textSize="17sp"
            android:textStyle="normal"
            android:layout_marginTop="18dp"
            />
        <android.widget.Button
            android:id="@+id/btn_okay"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
           android:background="@drawable/dialogbox_btn"
            android:padding="20dp"
            android:layout_margin="20dp"
            />
    </LinearLayout>



</LinearLayout>